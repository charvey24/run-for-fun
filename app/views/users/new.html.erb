<%= render partial: "layouts/navbar" %>
<h2>Signup Form</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name, class: "signup-label" %>
      <%= f.text_field :name, class: "signup-field" %>

      <%= f.label :email, class: "signup-label" %>
      <%= f.email_field :email, class: "signup-field" %>

      <%= f.label :password, class: "signup-label" %>
      <%= f.password_field :password, class: "signup-field" %>

      <%= f.label :password_confirmation, "Confirmation", class: "signup-label" %>
      <%= f.password_field :password_confirmation, class: "signup-field" %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>