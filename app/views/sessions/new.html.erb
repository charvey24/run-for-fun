<%= render partial: "layouts/navbar" %>
<h2>Login Form</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag login_path do %>
      <%= label_tag 'email', "Email", class: "login-label" %>
      <%= text_field_tag 'Email', :email, class: "login-field" %>

      <%= label_tag 'password', "Password", class: "login-label" %>
      <%= password_field_tag 'Password', :password, class: "login-field" %>

      <%= submit_tag "Login", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>